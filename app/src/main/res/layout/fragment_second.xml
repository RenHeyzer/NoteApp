<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".onboard.SecondFragment">

    <TextView
        android:id="@+id/txt_skip2"
        android:layout_marginTop="25dp"
        android:layout_marginRight="19dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/skip1"
        android:textColor="@color/support"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_second"
        android:layout_marginBottom="170dp"
        app:lottie_autoPlay="true"
        app:lottie_repeatCount="100000"
        android:elevation="5dp"
        app:lottie_rawRes="@raw/cutting_board"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="320dp"
        android:layout_height="300dp"/>

    <TextView
        android:id="@+id/txt_secondFragment"
        android:textSize="20sp"
        android:layout_marginTop="40dp"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lottie_second"
        android:text="@string/text_of_second_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>